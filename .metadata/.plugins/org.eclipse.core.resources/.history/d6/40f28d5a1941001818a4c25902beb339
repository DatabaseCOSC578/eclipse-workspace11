public class Dao {

	public String login_authentication(Connection con, LoginDetails ld) {
		if((ld.getUsername().equals("user"))&&(ld.getPassword().equals("password")))
				{
		return "Valid";
				}
		else
			return "Invalid UserName/Password";
		
	}
